    xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    Title="I DAG"
    prism:ViewModelLocator.AutowireViewModel="True"
    BackgroundColor="#f2f2ef"
    NavigationPage.HasNavigationBar="False"
    mc:Ignorable="d">

    <ContentPage.Content>

        <StackLayout>
            <Grid Padding="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Label
                    x:Name="PageHeading"
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="{OnPlatform iOS='75,60,0,0',
                                        Android='75,30,20,0'}"
                    FontFamily="{StaticResource BoldFont}"
                    HorizontalTextAlignment="Center"
                    Style="{StaticResource PageHeading}"
                    Text="I DAG" />
                <ffimageloadingsvg:SvgCachedImage
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="{OnPlatform iOS='0,60,0,0',
                                        Android='0,30,20,0'}"
                    Source="Calender.svg"
                    WidthRequest="20">
                    <ffimageloadingsvg:SvgCachedImage.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ShowDialogCommand}" NumberOfTapsRequired="1" />
                    </ffimageloadingsvg:SvgCachedImage.GestureRecognizers>
                </ffimageloadingsvg:SvgCachedImage>

            </Grid>
            <RefreshView
                Margin="20,20,20,20"
                Command="{Binding LoadTasksCommand}"
                IsRefreshing="{Binding IsBusy}">
                <CollectionView Margin="20,20,20,20" ItemsSource="{Binding CleaningTasks}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Margin="0,0,0,15">
                                <Frame
                                    Padding="10,20,0,10"
                                    BackgroundColor="#ffffff"
                                    CornerRadius="15"
                                    HasShadow="False"
                                    HorizontalOptions="StartAndExpand"
                                    IsClippedToBounds="True"
                                    VerticalOptions="StartAndExpand">


                                    <views:CleaningListDataTemplate />


                                </Frame>
